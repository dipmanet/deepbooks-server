{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"module": "NodeNext", // Or "esnext" if using ESM
		"moduleResolution": "NodeNext",
		"target": "es6",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"sourceMap": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
